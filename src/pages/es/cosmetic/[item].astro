---
import ItemDetails from "@/components/pages/cosmetic/ItemDetails.astro";
import { getCosmetic } from "@/services/cosmetics.ts";
export const prerender = false;

const id = Astro.params.item as string
const { currentLocale } = Astro
const data = await getCosmetic({ lang: currentLocale, id: id })

if (!data.item) {
    return Astro.redirect('/cosmetics', 301);
}

const cosmetic = data.item;

---

<ItemDetails data={cosmetic} /> 
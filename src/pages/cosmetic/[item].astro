---
import Item from "@/components/pages/cosmetic/Item.astro";
import { API_URLS } from '@/constants.ts';
export const prerender = false;
const { currentLocale } = Astro
const response = await fetch(API_URLS.ITEM_DETAILS + Astro.params.item + '&lang='+currentLocale, {
    method: 'GET',
    headers: {
        'Content-Type': 'application/json',
        'Authorization': import.meta.env.API_KEY
    }
})

const data = await response.json();

if (!data.item) {
    return Astro.redirect('/cosmetics', 301);
}

const cosmetic = data.item;

---

<Item data={cosmetic} /> 
---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const styles = "block py-2 px-3 m-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent";
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---
<a 
	href={href} 
	class:list={[styles,className, { active: isActive }]} 
	aria-current={isActive ? 'page' : undefined}
	{...props}
>
	<slot 
/>
</a>
<style>
	a {
		margin-left: 0 !important;
	}
	.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
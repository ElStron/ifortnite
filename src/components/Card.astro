---
import Link from '@/components/Link.astro';
interface Props {
    href: string;
    image: string;
    title: string;
    priority?:'high' | 'low' | 'auto';
    granted?: string[];
}
const { href, image, title, priority = 'low', granted } = Astro.props;
---
<Link href={href}>
    <article class="w-full relative">
        <header>
            <picture>
                <img src={image} 
                    alt={title} 
                    loading="lazy" 
                    width="100%" 
                    height="100%" 
                    fetchpriority={priority} 
                />
            </picture>
        </header>
        <footer class="w-full absolute bottom-0 left-0 bg-gradient-to-t	from-gray-800 to-transparent">
            <h3 class="text-sm font-nomal text-slate-200 my-2 mx-4">{title}</h3>
        </footer>
    </article>
</Link>

<style>
    article:hover {
        cursor: pointer;
        transform: scale(1.05);
        transition: all .2s ease-in-out;
        
    }
    img {
        width: 100%;
        height: 100%;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border-radius: 10px;
    }
</style>
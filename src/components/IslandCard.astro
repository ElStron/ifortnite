---
import Link from '@/components/Link.astro';
interface Props {
    code: string;
    image: string;
    title: string;
}
const { code, image, title } = Astro.props;
---
<Link href={`/creative/${code}`}>
    <article>
        <header>
            <picture>
                <img src={image} alt={title} loading="lazy" width="100%" height="100%" />
            </picture>
        </header>
        <footer>
            <h3>{title}</h3>
        </footer>
    </article>
</Link>

<style>
    article:hover {
        cursor: pointer;
        transform: scale(1.05);
        transition: all .2s ease-in-out;
        
    }
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
    }
</style>
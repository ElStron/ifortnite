---
import Layout from '@/layouts/Layout.astro';
import { API_URLS } from '@/constants.ts';
import { getI18N } from "@/i18n"
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const response = await fetch(API_URLS.ISLAND + Astro.params.island, {
    method: 'GET',
    headers: {
        'Content-Type': 'application/json',
        'Authorization': import.meta.env.API_KEY
    }
})

const data = await response.json();
const island = data.island;
---

<Layout title={i18n.CREATIVE.ISLAND.TITLE_SEO} description={i18n.CREATIVE.ISLAND.DESCRIPTION_SEO}>
    <h1>{island.title}</h1>
    <p>{island.description}</p>
    <img src={island.image} alt={island.title} />
</Layout>

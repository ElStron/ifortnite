---
interface Props {
    title: string;
    
}
const { title } = Astro.props;
---

<section class="w-full mx-auto p-6 bg-gray-800 rounded-2xl ">
    <h2 class="text-lg font-bold text-gray-900 dark:text-white my-4">{title}</h2>
    <ol class="w-full mx-auto grid grid-cols-5 gap-4 ">
        <slot/> 
    </ol>
</section>
<style>
    li {
        background-color: tomato;
        width: 100%;
        height: 180px;
        border-radius: 10px;
    }
</style>